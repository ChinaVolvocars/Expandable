<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.demo.expandablelistview.Main2Activity">


    <ExpandableListView
        android:id="@+id/expendlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:childDivider="#e2e2e2"
        android:divider="#999"
        android:dividerHeight="1px"

        ></ExpandableListView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#C78956"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/textView33"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/textView33"
            android:layout_toStartOf="@+id/textView33" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_safe"
            android:drawablePadding="3dp"
            android:text="资金安全由阳光保险提供保障"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/textView33"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/textView33"
            android:layout_toRightOf="@+id/textView33" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView13"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/calculator" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/textView33"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="17dp"
            android:text="立即购买"
            android:textColor="#fff"
            android:textSize="15sp" />

    </RelativeLayout>
</RelativeLayout>
